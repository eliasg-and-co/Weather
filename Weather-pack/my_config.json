{
  # input your own API key here
  "api_key": "{api_key}",
  "location": "New York",
  "host": "127.0.0.1",
  "base_port": 7400,
  "poll_interval": 60,
  "units": "imperial",
  "ranges": {
    "temp": {
      "min": 0,
      "max": 100,
      "unit": "F"
    },
    "wind": {
      "min": 0,
      "max": 25,
      "unit": "mph"
    },
    "rain": {
      "min": 0,
      "max": 5,
      "unit": "mm"
    },
    "pressure": {
      "min": 980,
      "max": 1040,
      "unit": "hPa"
    },
    "humidity": {
      "min": 0,
      "max": 100,
      "unit": "%"
    }
  }
}
